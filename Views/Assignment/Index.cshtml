@model IEnumerable<ChakisTicketTracking1.Models.Assignment>

@{
    ViewBag.Title = "Workloads";
}

<h2>Workloads</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Tech Assigned", "Index", new { sortOrder = ViewBag.NameSortParm})
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.TicketDescription)
        </th>
        <th>
            @Html.ActionLink("Request Date", "Index", new { sortOrder = ViewBag.DateSortParm})
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompletionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Tech.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ticket.TicketDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Ticket.RequestDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CompletionDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Notes)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.AssignmentID }) |
        @Html.ActionLink("Details", "Details", new { id = item.AssignmentID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.AssignmentID })
    </td>
</tr>
}

</table>
