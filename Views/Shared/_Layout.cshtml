<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TechTracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("TechTracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")&nbsp;</li>
                    <li>@Html.ActionLink("Techs", "Index", "Tech")&nbsp;</li>
                    <li>@Html.ActionLink("Tickets", "Index", "Ticket")&nbsp;</li>
                    <li>@Html.ActionLink("Assignments", "Index", "Assignment")&nbsp;</li>
                    <li>@Html.ActionLink("About", "About", "Home")&nbsp;</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")&nbsp;</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Created by Nicole Chakis</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap-lumen")
    @RenderSection("scripts", required: false)
</body>
</html>